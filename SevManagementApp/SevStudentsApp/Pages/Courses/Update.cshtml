@page
@model SevCoursesApp.Pages.Courses.UpdateModel
@{
    ViewData["Title"] = "Course Update";
}

<h2>New Course</h2>
@if (!Model.errorMessage.Equals(""))
{
        <h2><strong>@Model.errorMessage</strong></h2>
}

<form method="POST">
    <div class="row mb-3">
        <input type="hidden" class="form-control" name="id"  
                   value="@Model.courseDto.Id" />

    </div>
    <div class="row mb-3">
        <label for="description" class="col-md-1 col-form-label">Περιγραφή</label>
        <div>
            <input type="text" class="form-control"
                   name="description" id="description" placeholder="Enter description"
                   value="@Model.courseDto.Description" />
        </div>
    </div>
    <div class="row mb-3">
        <label for="teacherid" class="col-md-1 col-form-label">Κωδικός Καθηγητή</label>
        <div>
            <input type="number" class="form-control"
                   name="teacherid" id="teacherid" placeholder="Enter Teacher Id"
                   value="@Model.courseDto.TeacherId" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-md-1 col-md-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="offset-md-1 col-md-3 d-grid">
            <a href="/" role="button" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
