@page
@model SevTeachersApp.Pages.Teachers.IndexModel
@{
    ViewData["Title"] = "Teacher Index";

}

<h2>List of Teachers</h2>
<a class="btn btn-primary btn-sm" href="/Teachers/Create">New Teacher</a>
<div style="background:#611ff0">
<table class="table table-bordered table-hover text-white">
    <thead>
        <tr>
            <th>ID</th>
            <th>Firstname</th>
            <th>Lastname</th></tr>
        </thead>
        <tbody>
            @if (Model.teachers is not null) 
            {
                @foreach (var teacher in Model.teachers)
                {
                    <tr>
                        <td>@teacher.Id</td>
                        <td>@teacher.Firstname</td>
                        <td>@teacher.Lastname</td>
                        <td>
                                    <a class="btn btn-outline-light btn-sm" 
                                    href="/Teachers/Update?id=@teacher.Id">Update</a>
                                     <a class="btn btn-outline-light btn-sm" 
                                    href="/Teachers/Delete?id=@teacher.Id">Delete</a>
                        </td>
                    </tr>
                }
            }

        </tbody>



    </table>
    </div>
