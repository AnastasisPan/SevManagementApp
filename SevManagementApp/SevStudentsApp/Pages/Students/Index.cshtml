@page
@model SevStudentsApp.Pages.Students.IndexModel
@{
    ViewData["Title"] = "Student Index";

}

<h2>List of Students</h2>
<a class="btn btn-primary btn-sm" href="/Students/Create">New Student</a>
<div style="background:#611ff0">
<table class="table table-bordered table-hover text-white">
    <thead>
        <tr>
            <th>ID</th>
            <th>Firstname</th>
            <th>Lastname</th></tr>
        </thead>
        <tbody>
            @if (Model.students is not null) 
            {
                @foreach (var student in Model.students)
                {
                    <tr>
                        <td>@student.Id</td>
                        <td>@student.Firstname</td>
                        <td>@student.Lastname</td>
                        <td>
                                    <a class="btn btn-outline-light btn-sm" 
                                    href="/Students/Update?id=@student.Id">Update</a>
                                     <a class="btn btn-outline-light btn-sm" 
                                    href="/Students/Delete?id=@student.Id">Delete</a>
                        </td>
                    </tr>
                }
            }

        </tbody>



    </table>
    </div>
